<h1> UPDATE THE COMPLETED STATUS</h1>
<%= form_with model: @todo do |form| %>
	<div>
		<%= form.label :todo_text %><br>
		<%= form.text_field :todo_text %>
	</div>
	<div>
		<%= form.label :due_date %><br>
		<%= form.date_field :due_date %>
	</div>

	<div>
		<%= form.label :completed %><br>
		<%= form.check_box :completed %>
	</div>

	<div>
		<%= form.submit %>
	</div>

<%= link_to 'back' , todos_path %>
<% end %>