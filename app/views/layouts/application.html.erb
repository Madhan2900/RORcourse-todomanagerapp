<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>


    <% if @current_user %>
      <div style="background-color: lightgrey; display: flex; vertical-align: middle;">
        <p class="UserHeader">
          Welcome <%= @current_user.first_name %>!
          <%= button_to "Sign-out" , destroy_session_path , method: "delete" , class: "Button" %>
        </p>
      </div>
      
    <% end %>

    <% if flash[:error] %>
      <p class="FlashError">
        <%= flash[:error] %>

      </p>
    <%end%>
    <%= yield %>
  </body>
</html>
